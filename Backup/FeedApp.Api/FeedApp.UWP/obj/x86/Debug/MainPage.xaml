<Page
    x:Class="FeedApp.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FeedApp.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:ConnectionId='1' x:Name="FeedAppTextBlock" HorizontalAlignment="Left" Height="90" Margin="100,-5,-450,0" Text="FeedApp" TextWrapping="Wrap" VerticalAlignment="Top" Width="350" FontSize="72" Grid.ColumnSpan="2" FontFamily="Snap ITC"/>
        <Image x:ConnectionId='2' x:Name="LogoImage" HorizontalAlignment="Left" Height="85" VerticalAlignment="Top" Width="85" Source="Assets/Square44x44Logo.png"/>
        
        <RichTextBlock x:ConnectionId='3' x:Name="AppDescriptionTextBlock" Margin="710,45,70,90" TextWrapping="Wrap" Width="500">
            <Paragraph>App Description, maybe better put a photo made of a pdf text here</Paragraph>
        </RichTextBlock>

        <Grid Margin="50,45,0,0" Height="585" VerticalAlignment="Top" HorizontalAlignment="Left" Width="600">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="67*"/>
                <ColumnDefinition Width="53*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:ConnectionId='4' x:Name="WelcomeTextBlock" Text="Welcome" TextWrapping="Wrap" FontSize="72" Margin="140,50,0,0" Height="104" VerticalAlignment="Top" HorizontalAlignment="Left" Width="312" Grid.ColumnSpan="2"/>
            <HyperlinkButton x:ConnectionId='5' x:Name="ForgotPasswordHyperLinkButton" Content="Forgot your password?" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="0,350,0,0" Width="215" Height="40" Grid.Column="1" />
            <Button x:ConnectionId='6' x:Name="SignInButton" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Sign In" FontSize="36" Margin="150,430,0,0" Height="75" Grid.ColumnSpan="2" Width="300"/>
            <TextBlock x:ConnectionId='7' x:Name="SignUpTextBlock" HorizontalAlignment="Left" Text="Don't you have an account?" TextWrapping="Wrap" Width="305" FontSize="20" Margin="50,530,0,0" Height="35" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <HyperlinkButton x:ConnectionId='8' x:Name="SignUpHyperLinkButton" Content="Sign Up" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="134,525,0,0" Height="42" Width="81" Grid.Column="1"                                    />
            <CheckBox x:ConnectionId='9' x:Name="RememberMeCheckBox" Content="Remember me" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.488,-1.5" Margin="50,355,0,0" Height="32" Width="200"/>
            <TextBox x:ConnectionId='10' x:Name="EmailTextBlock" Margin="50,195,0,0" Text="" TextWrapping="Wrap" FontSize="36" PlaceholderText="Email" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="500" Height="55" VerticalAlignment="Top"/>
            <PasswordBox x:ConnectionId='11' x:Name="PasswordBox" Margin="50,270,0,0" FontSize="36" PlaceholderText="Password" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="500" Height="55" VerticalAlignment="Top"/>
        </Grid>


    </Grid>
</Page>

