<Application
    x:Class="FitAppUWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FitAppUWP"
    RequestedTheme="Light">

    <!--
    Jelezzuk, hogy hasznalni szeretnenk a Resources mappaba elhelyezett ColorResources nevre hallgato ResourceDictionary-t
    -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ColorResources.xaml"/>
                <ResourceDictionary Source="Resources/TextStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
